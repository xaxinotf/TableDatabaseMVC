@model TableDatabaseMVC.Models.Table

@{
    ViewData["Title"] = "Delete Row from " + Model.Name;
    var rowIndex = ViewBag.RowIndex;
    var row = Model.Rows[rowIndex];
}

<h1>Delete Row from @Model.Name</h1>

<h3>Are you sure you want to delete this row?</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            @foreach (var column in Model.Columns)
            {
                    <th>@column.Name (@column.Type)</th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var value in row.Values)
            {
                    <td>@value</td>
            }
        </tr>
    </tbody>
</table>

<form asp-action="DeleteRow" method="post">
    <input type="hidden" name="tableName" value="@Model.Name" />
    <input type="hidden" name="rowIndex" value="@rowIndex" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-name="@Model.Name" class="btn btn-secondary">Cancel</a>
</form>
